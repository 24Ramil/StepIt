<Application x:Class="MonefyApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MonefyApp"
             xmlns:view="clr-namespace:MonefyApp.View"
             xmlns:viewModel="clr-namespace:MonefyApp.ViewModels"
             >
    <Application.Resources>
        <ResourceDictionary>

            <DataTemplate DataType="{x:Type viewModel:CalculatorViewModel}">
                <view:CalculatorView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:MainWindowModel}">
                <view:MainWindow/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:DiagramViewModel}">
                <view:DiagramView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:MenuLeftViewModel}">
                <view:MenuLeftView/>
            </DataTemplate>


        </ResourceDictionary>
    </Application.Resources>

</Application>
